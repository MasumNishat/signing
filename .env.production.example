# ============================================================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# ============================================================================
# WARNING: This file contains production-ready settings
# Do NOT commit actual credentials to version control
# ============================================================================

# Application Settings
APP_NAME="DocuSign Signing API"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://api.yourdomain.com
APP_TIMEZONE=UTC

# Database (Use managed PostgreSQL service)
DB_CONNECTION=pgsql
DB_HOST=your-postgres-server.com
DB_PORT=5432
DB_DATABASE=signing_api_prod
DB_USERNAME=signing_api_user
DB_PASSWORD=
DB_SCHEMA=public
DB_SSLMODE=require
DB_CONNECTION_POOL_SIZE=20
DB_IDLE_TIMEOUT=60

# Cache & Sessions (Use Redis or managed cache service)
CACHE_STORE=redis
CACHE_PREFIX=signing_api_prod_
SESSION_DRIVER=redis
SESSION_LIFETIME=120

# Queue (Use Redis or managed queue service)
QUEUE_CONNECTION=redis
QUEUE_PREFIX=signing_api_prod_

# Redis (Use managed Redis service)
REDIS_CLIENT=phpredis
REDIS_HOST=your-redis-server.com
REDIS_PASSWORD=
REDIS_PORT=6379
REDIS_DB=0
REDIS_CACHE_DB=1
REDIS_QUEUE_DB=2
REDIS_SESSION_DB=3

# Mail (Use managed email service)
MAIL_MAILER=ses
MAIL_FROM_ADDRESS="noreply@yourdomain.com"
MAIL_FROM_NAME="${APP_NAME}"

# AWS SES Configuration
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1

# AWS S3 for Document Storage
FILESYSTEM_DISK=s3
AWS_BUCKET=signing-api-documents-prod
AWS_DOCUMENTS_BUCKET=signing-api-documents-prod
AWS_DOCUMENTS_REGION=us-east-1

# OAuth & API Configuration
PASSPORT_ACCESS_TOKEN_LIFETIME=60
PASSPORT_REFRESH_TOKEN_LIFETIME=20160
PASSPORT_PERSONAL_ACCESS_TOKEN_LIFETIME=262800
API_VERSION=v2.1
API_RATE_LIMIT_AUTHENTICATED=1000
API_RATE_LIMIT_UNAUTHENTICATED=100

# Horizon Configuration
HORIZON_PATH=horizon
HORIZON_MEMORY_LIMIT=256
HORIZON_BALANCE=auto
HORIZON_PROCESSES=5
HORIZON_TRIES=3
HORIZON_TIMEOUT=300

# Logging (Use centralized logging)
LOG_CHANNEL=stack
LOG_STACK=daily,slack
LOG_LEVEL=error
LOG_SLACK_WEBHOOK_URL=

# Security Settings
FORCE_HTTPS=true
SESSION_SECURE_COOKIE=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=strict
CORS_ALLOWED_ORIGINS="https://app.yourdomain.com,https://www.yourdomain.com"

# Error Tracking (Sentry)
SENTRY_LARAVEL_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.1

# Monitoring (New Relic)
NEW_RELIC_ENABLED=true
NEW_RELIC_APP_NAME="DocuSign Signing API - Production"
NEW_RELIC_LICENSE_KEY=

# Billing (Stripe)
STRIPE_KEY=
STRIPE_SECRET=
STRIPE_WEBHOOK_SECRET=

# Document Processing
MAX_DOCUMENT_SIZE=25000000
MAX_DOCUMENTS_PER_ENVELOPE=50
ALLOWED_DOCUMENT_TYPES=pdf,doc,docx

# ============================================================================
# Docker Environment Configuration
# ============================================================================
# This file is optimized for Docker Compose setup
# Copy this file to .env when using Docker
# ============================================================================

APP_NAME="DocuSign Signing API"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000
APP_TIMEZONE=UTC

# Docker PostgreSQL Configuration
DB_CONNECTION=pgsql
DB_HOST=postgres
DB_PORT=5432
DB_DATABASE=signing_api
DB_USERNAME=postgres
DB_PASSWORD=secret

# Docker Redis Configuration
REDIS_CLIENT=phpredis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# Cache & Queue Configuration (using Redis in Docker)
CACHE_STORE=redis
QUEUE_CONNECTION=redis
SESSION_DRIVER=redis

# Mail Configuration (using Mailpit in Docker)
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# Filesystem Configuration (local for development)
FILESYSTEM_DISK=local

# OAuth Configuration
PASSPORT_ACCESS_TOKEN_LIFETIME=60
PASSPORT_REFRESH_TOKEN_LIFETIME=20160
PASSPORT_PERSONAL_ACCESS_TOKEN_LIFETIME=262800

# API Configuration
API_VERSION=v2.1
API_RATE_LIMIT_AUTHENTICATED=1000
API_RATE_LIMIT_UNAUTHENTICATED=100

# Horizon Configuration
HORIZON_PATH=horizon
HORIZON_MEMORY_LIMIT=128
HORIZON_BALANCE=auto
HORIZON_PROCESSES=3

# Logging
LOG_CHANNEL=stack
LOG_STACK=single
LOG_LEVEL=debug

# Docker Port Configuration (exposed to host)
APP_PORT=8000
DB_PORT=5432
REDIS_PORT=6379
MAILPIT_PORT=1025
MAILPIT_UI_PORT=8025

# Security (development settings)
FORCE_HTTPS=false
SESSION_SECURE_COOKIE=false
CORS_ALLOWED_ORIGINS=*

# Document Processing
MAX_DOCUMENT_SIZE=25000000
MAX_DOCUMENTS_PER_ENVELOPE=50
ALLOWED_DOCUMENT_TYPES=pdf,doc,docx

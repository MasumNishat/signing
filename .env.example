# ============================================================================
# APPLICATION CONFIGURATION
# ============================================================================

# Application Name - Displayed in emails and UI
APP_NAME="DocuSign Signing API"

# Application Environment: local, development, staging, production
APP_ENV=local

# Application Key - Generate using: php artisan key:generate
APP_KEY=

# Enable Debug Mode (MUST be false in production)
APP_DEBUG=true

# Application URL (used for generating links)
APP_URL=http://localhost

# Application Timezone
APP_TIMEZONE=UTC

# Application Locale Configuration
APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

# Maintenance Mode Configuration
APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

# PHP CLI Server Workers (for development)
# PHP_CLI_SERVER_WORKERS=4

# Bcrypt Hashing Rounds (higher = more secure but slower)
BCRYPT_ROUNDS=12

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# Database Connection: sqlite, mysql, pgsql, sqlsrv
DB_CONNECTION=pgsql

# PostgreSQL Configuration
DB_HOST=127.0.0.1
DB_PORT=5432
DB_DATABASE=signing_api
DB_USERNAME=postgres
DB_PASSWORD=
DB_SCHEMA=public

# Database Connection Options
DB_SSLMODE=prefer
# DB_SSLCERT=
# DB_SSLKEY=
# DB_SSLROOTCERT=

# Connection Pool Settings
DB_CONNECTION_POOL_SIZE=10
DB_IDLE_TIMEOUT=60

# ============================================================================
# CACHE CONFIGURATION
# ============================================================================

# Cache Store: file, redis, memcached, dynamodb, database
CACHE_STORE=redis

# Cache Prefix (useful for shared Redis instances)
# CACHE_PREFIX=signing_api_

# Cache TTL (in seconds)
CACHE_TTL=3600

# ============================================================================
# QUEUE CONFIGURATION
# ============================================================================

# Queue Connection: sync, database, redis, sqs, beanstalkd
QUEUE_CONNECTION=redis

# Queue Name Prefix (useful for shared Redis instances)
QUEUE_PREFIX=signing_api_

# Failed Job Configuration
FAILED_QUEUE_DRIVER=database-uuids

# ============================================================================
# REDIS CONFIGURATION
# ============================================================================

# Redis Client: phpredis, predis
REDIS_CLIENT=phpredis

# Redis Connection
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_DB=0

# Redis Cache Database
REDIS_CACHE_DB=1

# Redis Queue Database
REDIS_QUEUE_DB=2

# Redis Session Database
REDIS_SESSION_DB=3

# Redis Cluster Configuration
# REDIS_CLUSTER=true
# REDIS_CLUSTER_NODES=127.0.0.1:6379,127.0.0.1:6380

# Redis Sentinel Configuration
# REDIS_SENTINEL=mymaster
# REDIS_SENTINEL_NODES=127.0.0.1:26379,127.0.0.1:26380

# ============================================================================
# SESSION CONFIGURATION
# ============================================================================

# Session Driver: file, cookie, database, memcached, redis, dynamodb, array
SESSION_DRIVER=database

# Session Lifetime (in minutes)
SESSION_LIFETIME=120

# Encrypt Session Data
SESSION_ENCRYPT=false

# Session Cookie Configuration
SESSION_PATH=/
SESSION_DOMAIN=null
SESSION_SECURE_COOKIE=false
SESSION_SAME_SITE=lax

# ============================================================================
# BROADCASTING CONFIGURATION
# ============================================================================

# Broadcast Driver: log, redis, pusher, ably, null
BROADCAST_CONNECTION=log

# Pusher Configuration (if using pusher)
# PUSHER_APP_ID=
# PUSHER_APP_KEY=
# PUSHER_APP_SECRET=
# PUSHER_HOST=
# PUSHER_PORT=443
# PUSHER_SCHEME=https
# PUSHER_APP_CLUSTER=mt1

# ============================================================================
# FILESYSTEM CONFIGURATION
# ============================================================================

# Default Filesystem Disk: local, public, s3
FILESYSTEM_DISK=local

# AWS S3 Configuration (for document storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false
AWS_ENDPOINT=

# S3 Configuration for Document Storage
# AWS_DOCUMENTS_BUCKET=
# AWS_DOCUMENTS_REGION=us-east-1

# ============================================================================
# MAIL CONFIGURATION
# ============================================================================

# Mail Driver: smtp, ses, mailgun, postmark, sendmail, log, array, failover, roundrobin
MAIL_MAILER=log

# SMTP Configuration
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=tls

# Mail From Configuration
MAIL_FROM_ADDRESS="noreply@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# Mailgun Configuration
# MAILGUN_DOMAIN=
# MAILGUN_SECRET=
# MAILGUN_ENDPOINT=api.mailgun.net

# Postmark Configuration
# POSTMARK_TOKEN=

# AWS SES Configuration
# AWS_SES_KEY=
# AWS_SES_SECRET=
# AWS_SES_REGION=us-east-1

# ============================================================================
# OAUTH & PASSPORT CONFIGURATION
# ============================================================================

# OAuth Token Lifetimes (in minutes)
PASSPORT_ACCESS_TOKEN_LIFETIME=60
PASSPORT_REFRESH_TOKEN_LIFETIME=20160
PASSPORT_PERSONAL_ACCESS_TOKEN_LIFETIME=262800

# OAuth Encryption Keys (auto-generated via php artisan passport:keys)
# PASSPORT_PRIVATE_KEY=
# PASSPORT_PUBLIC_KEY=

# ============================================================================
# API CONFIGURATION
# ============================================================================

# API Version
API_VERSION=v2.1

# API Rate Limiting (requests per window)
API_RATE_LIMIT_AUTHENTICATED=1000
API_RATE_LIMIT_UNAUTHENTICATED=100
API_RATE_LIMIT_WINDOW=60

# API Burst Rate Limiting (requests per second)
API_BURST_LIMIT=20

# Login Rate Limiting
LOGIN_RATE_LIMIT=5
LOGIN_RATE_WINDOW=1

# API Request Timeout (in seconds)
API_REQUEST_TIMEOUT=30

# API Response Compression
API_COMPRESSION_ENABLED=true

# ============================================================================
# HORIZON CONFIGURATION
# ============================================================================

# Horizon Path (must be protected by authentication)
HORIZON_PATH=horizon

# Horizon Memory Limit (in MB)
HORIZON_MEMORY_LIMIT=128

# Horizon Queue Balancing: simple, auto
HORIZON_BALANCE=auto

# Horizon Worker Processes
HORIZON_PROCESSES=3

# Horizon Queue Tries
HORIZON_TRIES=3

# Horizon Queue Timeout (in seconds)
HORIZON_TIMEOUT=300

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================

# Log Channel: stack, single, daily, slack, papertrail, stderr, syslog, errorlog
LOG_CHANNEL=stack

# Log Stack Channels (comma-separated)
LOG_STACK=single

# Log Deprecations Channel
LOG_DEPRECATIONS_CHANNEL=null

# Log Level: emergency, alert, critical, error, warning, notice, info, debug
LOG_LEVEL=debug

# Slack Logging Configuration
# LOG_SLACK_WEBHOOK_URL=

# Papertrail Configuration
# PAPERTRAIL_URL=
# PAPERTRAIL_PORT=

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================

# Force HTTPS (production only)
FORCE_HTTPS=false

# CORS Configuration
CORS_ALLOWED_ORIGINS=*
CORS_ALLOWED_METHODS="GET,POST,PUT,PATCH,DELETE,OPTIONS"
CORS_ALLOWED_HEADERS="Content-Type,X-Requested-With,Authorization,X-Api-Key,X-Request-ID"
CORS_EXPOSED_HEADERS="X-RateLimit-Limit,X-RateLimit-Remaining,X-Request-ID"
CORS_MAX_AGE=3600

# API Key Configuration
API_KEY_HASH_ALGO=sha256
API_KEY_LENGTH=32

# Password Rules
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SPECIAL_CHARS=true

# Session Security
SESSION_SECURE_COOKIE=false
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax

# ============================================================================
# DOCUMENT PROCESSING CONFIGURATION
# ============================================================================

# Document Upload Limits
MAX_DOCUMENT_SIZE=25000000
MAX_DOCUMENTS_PER_ENVELOPE=50
ALLOWED_DOCUMENT_TYPES=pdf,doc,docx

# PDF Processing
PDF_PROCESSOR=pdftk
# PDF_PROCESSOR_PATH=/usr/bin/pdftk

# Image Processing
IMAGE_PROCESSOR=imagick
MAX_IMAGE_SIZE=5000000

# ============================================================================
# THIRD-PARTY SERVICES
# ============================================================================

# Sentry Error Tracking
# SENTRY_LARAVEL_DSN=
# SENTRY_TRACES_SAMPLE_RATE=1.0

# New Relic APM
# NEW_RELIC_ENABLED=false
# NEW_RELIC_APP_NAME=
# NEW_RELIC_LICENSE_KEY=

# Google Analytics
# GOOGLE_ANALYTICS_ID=

# Stripe Payment Processing (for billing)
# STRIPE_KEY=
# STRIPE_SECRET=
# STRIPE_WEBHOOK_SECRET=

# ============================================================================
# MEMCACHED CONFIGURATION (if using memcached)
# ============================================================================

MEMCACHED_HOST=127.0.0.1
MEMCACHED_PORT=11211
MEMCACHED_USERNAME=null
MEMCACHED_PASSWORD=null

# ============================================================================
# VITE CONFIGURATION (for frontend assets, if applicable)
# ============================================================================

VITE_APP_NAME="${APP_NAME}"
# VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
# VITE_PUSHER_HOST="${PUSHER_HOST}"
# VITE_PUSHER_PORT="${PUSHER_PORT}"
# VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
# VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"

# ============================================================================
# DEVELOPMENT & DEBUG CONFIGURATION
# ============================================================================

# Telescope (Laravel Debugging Tool)
# TELESCOPE_ENABLED=false
# TELESCOPE_PATH=telescope

# Query Logging
LOG_QUERY=false
LOG_QUERY_SLOW_THRESHOLD=1000

# Debug Bar
# DEBUGBAR_ENABLED=false

# ============================================================================
# TESTING CONFIGURATION
# ============================================================================

# Testing Environment Overrides (used by phpunit.xml)
# These are typically set in phpunit.xml, not .env
# DB_CONNECTION=sqlite
# DB_DATABASE=:memory:
